<p id="notice"><%= notice %></p>
<div class="py-2">
    <article class="media box">
        <figure class="media-left">
            <p class="image is-64x64">
            </p>
        </figure>
        <div class="content quote-org justify">
            <div>
                <%= link_to @post.user.fullname, user_path(@post.user), class: 'post-author' %><br>
                <small>@<%= link_to @post.user.username, user_path(@post.user), class: 'post-author' %></small><br />

                <p><%= @post.postcontent %></p>
            </div>
            <div class="quote-icon">
               
                <%= edit_delete_own_post %>                               
            </div>
        </div>
</div>

<div class="media-content">

    <nav class="block">
        <div class='post-comments-section pl-4'>
                <%= render partial: 'replies/reply', collection: @post.replies %>

                <%= form_for(@post.replies.new, url: post_replies_path(@post)) do |form| %>
                <div class="reply-input"><%= form.text_field :content, label: "Post about it", input_html: { class: "input"},
                                                  wrapper: false, label_html: {class: "label"}, placeholder: "Reply this post.",
                                                  autofocus: true %></div>
                <%= form.button :submit, class: "button is-info my-2" %>
                <% end %>
               <%= link_to 'Show', @post %> |
          <%= link_to 'Back', posts_path %> </div>

    </nav>
</div>

</article>

</div>