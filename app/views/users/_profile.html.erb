<div class="wtf-panel py-5">
    <nav class="">
        <article class="">
            <div class="media-content ">
                <figure class=" thumb">
                    <img class="rounded-circle" src="https://louisem.com/wp-content/uploads/2017/07/facebook-link-thumbnail-2017.jpg" height="100px" width="100px">
                </figure>
                <p><%= @user.fullname  %></p>
                <p><small>@<%= @user.username  %></small></p>
                
            </div>

            <div class="d-flex">
                <div class="stat">
                    <p class="has-text-centered	 "><%= @user.posts.count  %></p>
                    <p class="heading">Posts</p>
                </div>
                <div class="stat">
                 <p class=" has-text-centered	"><%= @user.followed_users.count  %></p>
                    <p class="heading">Following</p>
                   
                </div>
                <div class="stat">
                    <p class="has-text-centered	"><%= @user.followers.count  %></p>
                    <p class="heading">Followers</p>
                </div>
            </div>

            <div class="followed mt-2">
                Followed by:<br>
                <% @user.followers.each do |user| %>
                <br>
                 <div class="is-flex">
                <figure class="image is-32x32 thumb">
                    <img class="rounded-circle" src="https://louisem.com/wp-content/uploads/2017/07/facebook-link-thumbnail-2017.jpg" height="32px" width="32px">
                </figure>
                <div class="ml-2 lef">
                    <p class="fullname"> <%= link_to user.username, user_path(user) %><br>
                    </p>
                    <p class="greyy">@<%= link_to user.username, user_path(user) %><br>
                    </p>
                </div>
                </div>
            </div>
                <%end %>
            </div>
        </article>
    </nav>
</div>